<!-- Header Navigation -->
<%- include ../partials/header.ejs %>

  <!-- Navbar -->
  <%- include ../partials/main_nav.ejs %>

  <!-- Main Content -->
  <%- include ../partials/content_notitle.ejs %>
  <main class="container">
    <div class="row">
        <div class="col col-md-12">
            <h1><%=title%></h1> <br>

            <!-- Add Button -->
            <a href="/recordlist/add" class="btn btn-primary" role="button">
            <i class="fa-solid fa-plus"></i> Add An Item</a><br><br>

            <table class="table table-bordered table-striped table-hover">
                <!-- Table Header -->
                <tr>
                    <th class="text-center col-3">Name </th>
                    <th class="text-center col-4">Phone Number </th>
                    <th class="text-center col-4">Email Address </th>


                    <% if (typeof displayName == 'string' && displayName) { %>
                    <th class="text-center col-2">Update </th>
                    <th class="text-center col-2">Delete </th>
                    <% } %>
                </tr>

                <!-- Template Rows -->
                <% for (let i of RecordList) { %>
                    <tr>
                        <th class="text-center col-2"><%= i.name  %></th>
                        <th class="text-center col-4"><a href="tel:<%=i.phone%>"><%= i.phone  %></a></th>
                        <th class="text-center col-4"><a href="mailto:<%=i.email%>"><%= i.email  %></a></th>

                        <% if (typeof displayName == 'string' && displayName) { %>
                        <td class="text-center col-1 text-nowrap">
                            <a href="/recordlist/update/<%= i._id %>" class="btn btn-primary btn-sm">
                            <i class="fa-solid fa-pencil"></i> Update</a>
                        </td>
                        <td class="text-center col-2 text-nowrap">
                            <a href="/recordlist/delete/<%= i._id %>" class="btn btn-danger btn-sm">
                            <i class="fa-solid fa-trash"></i> Delete</a>
                        </td>
                        <% } %>
                    </tr>
                <% } %>

            </table>
        </div>
    </div>
  </main>

  <!-- Bottom Navigation -->
  <%- include ../partials/bottom_nav.ejs %>

<!-- Footer Navigation -->
<%- include ../partials/footer.ejs %>

